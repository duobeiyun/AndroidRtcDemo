<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="52dp">

    <RelativeLayout
        android:id="@+id/rl_answer_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_refresh_answer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="已参与答题人数 200"
            android:textColor="#A9A9A9"
            android:textSize="14dp"/>

        <ImageButton
            android:id="@+id/ib_answer_refresh"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#6DA8F8"
            android:src="@drawable/answer_refresh"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_answer_refresh_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_answer_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="22dp"
            android:text="@string/tv_answer_end_disp"
            android:textColor="#A9A9A9"
            android:textSize="14dp"/>

    </RelativeLayout>


</RelativeLayout>