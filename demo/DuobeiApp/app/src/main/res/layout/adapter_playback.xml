<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_playback_root"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:gravity="center_vertical"
                android:padding="0dp">

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_margin="0dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/iv_palyback_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/triangle"/>

        <RelativeLayout
            android:id="@+id/rl_down"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_playback_play">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_down"/>
        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/to_right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/rl_left"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_playback_class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程1"/>

        <TextView
            android:id="@+id/tv_playback_time_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1:12:00 |     可离线下载"
            android:textColor="#aaa"/>
    </LinearLayout>


</RelativeLayout>